{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "assets": ["./assets/*"],
      "src": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es6", "esnext"],
    "target": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
